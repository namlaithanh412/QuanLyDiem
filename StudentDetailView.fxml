<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f0f4f8;"
xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grademanager.app.screen.StudentDetailController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #3b82f6; -fx-padding: 20;">
            <Label fx:id="studentNameLabel" style="-fx-font-size: 20; -fx-font-weight: bold;"
text="Student Grades" textFill="white" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                 <Label text="Select Semester:" textFill="white"/>
                 <ComboBox fx:id="semesterComboBox" prefWidth="150.0" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <TableView fx:id="gradeTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="semesterColumn" prefWidth="100" text="Semester" />
                
                    <TableColumn fx:id="courseIdColumn" prefWidth="100" text="Course ID" />
                    <TableColumn fx:id="courseNameColumn" prefWidth="200" text="Course Name" />
                    <TableColumn fx:id="creditsColumn" prefWidth="70" text="Credits" />
                    <TableColumn fx:id="midtermColumn" prefWidth="80" text="Midterm" />
                  
                    <TableColumn fx:id="finalColumn" prefWidth="80" text="Final" />
                    <TableColumn fx:id="gpaColumn" prefWidth="70" text="GPA" />
                </columns>
            </TableView>
            
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
              
                <Label fx:id="overallGPALabel" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #3b82f6;" text="Overall GPA: 0.00" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleClose" style="-fx-background-color: #64748b;
-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Close" />
            </HBox>
        </VBox>
    </center>
</BorderPane>