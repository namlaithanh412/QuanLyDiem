<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #f0f4f8;"
xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grademanager.app.screen.ProfessorViewController">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #3b82f6; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Grade Manager" textFill="white">
                    <font>
                        <Font name="System Bold" size="24" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="userInfoLabel" style="-fx-font-size: 14;" textFill="white" />
                <Button onAction="#handleLogout" style="-fx-background-color: white; -fx-text-fill: #3b82f6; -fx-font-weight: bold;" text="Logout" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Grading">
                <SplitPane dividerPositions="0.6">
                    <VBox spacing="10" style="-fx-padding: 15;">
                        <Label fx:id="selectedCourseLabel" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Select a class to view students" />
                        
                        <VBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="Update Scores (0-10):" />
                            <HBox spacing="10">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label style="-fx-font-size: 12;" text="Midterm:" />
                                    <TextField fx:id="midtermField" promptText="0-10" />
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label style="-fx-font-size: 12;" text="Final:" />
                                    <TextField fx:id="finalField" promptText="0-10" />
                                </VBox>
                            </HBox>
                            <Button maxWidth="Infinity" onAction="#handleUpdateScores" style="-fx-background-color: #10b981; -fx-text-fill: white;" text="Update Scores" />
                            <Separator />
                            <Button maxWidth="Infinity" onAction="#handleViewStudentGrades" style="-fx-background-color: #8b5cf6; -fx-text-fill: white;" text="View Student Full Grades" />
                        </VBox>

                        <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="60" text="ID" />
                                <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
                                <TableColumn fx:id="semesterColumn" prefWidth="90" text="Semester" />
                                <TableColumn fx:id="midtermColumn" prefWidth="70" text="Midterm" />
                                <TableColumn fx:id="finalColumn" prefWidth="70" text="Final" />
                                <TableColumn fx:id="gpaColumn" prefWidth="60" text="GPA" />
                            </columns>
                        </TableView>
                    </VBox>

                    <VBox spacing="10" style="-fx-padding: 15;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="My Classes" />
                            <Region HBox.hgrow="ALWAYS" />
                        </HBox>
                        <VBox spacing="5">
                            <Label text="Filter by Semester:" />
                            <ComboBox fx:id="semesterComboBox" maxWidth="Infinity" />
                        </VBox>
                        <ListView fx:id="courseListView" VBox.vgrow="ALWAYS" />
                    </VBox>
                </SplitPane>
            </Tab>

            <Tab text="Appeal Requests">
                <VBox spacing="10" style="-fx-padding: 20;">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Pending Appeals" />
                    <TableView fx:id="appealTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="appStudentCol" prefWidth="150" text="Student" />
                            <TableColumn fx:id="appCourseCol" prefWidth="100" text="Course" />
                            <TableColumn fx:id="appTypeCol" prefWidth="80" text="Type" />
                            <TableColumn fx:id="appReasonCol" prefWidth="300" text="Reason" />
                            <TableColumn fx:id="appStatusCol" prefWidth="100" text="Status" />
                        </columns>
                    </TableView>
                    <HBox spacing="10">
                        <Button onAction="#handleProcessAppeal" style="-fx-background-color: #3b82f6; -fx-text-fill: white;" text="Process Selected Appeal" />
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>